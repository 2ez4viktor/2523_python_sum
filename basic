#area and perimeter of circle
pi=3.1416
r=int(input('insert radius of the circle : '))
print('area of the circle is ',pi * r**2)
print('perimeter of the circle is ',2* pi * r)

print('Enter your marks in the subject below')
a=int(input('Myanmar : '))
b=int(input('English : '))
c=int(input('Maths : '))
t=a+b+c
avg=t/3
print('Your average mark is ',avg)
if avg >= 91 and avg <= 100:
  print('Your grade is A')
elif avg >=75 and avg <=90:
  print('Your grade is B')
elif avg>=40 and avg<=74:
  print('Your grade is C')
else:
  print('Better luck next time')
print('Good Bye.')
